<%- include('../partials/header') %>

    <h2>Products</h2>
    <p><a href="/products/new">+ New Product</a></p>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Supplier</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(p => { %>
                <tr>
                    <td>
                        <a href="/products/<%= p._id %>">
                            <%= p.name %>
                        </a>
                    </td>
                    <td>
                        <%= p.price %>
                    </td>
                    <td>
                        <%= p.quantity %>
                    </td>
                    <td>
                        <%= p.supplierId ? p.supplierId.name : 'â€”' %>
                    </td>
                    <td>
                        <a href="/products/<%= p._id %>/edit">Edit</a>
                        <form action="/products/<%= p._id %>?_method=DELETE" method="POST" style="display:inline">
                            <button type="submit" onclick="return confirm('Delete?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>